<Page x:Class="ICHelp.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
       xmlns:viewmodel="clr-namespace:ICHelp.ViewModels"
      xmlns:local="clr-namespace:ICHelp.Views"
      mc:Ignorable="d" 
      DataContext="{Binding MainPageViewModel, Source={StaticResource ViewModelLocator}}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage" Style="{StaticResource WindowBlackStyle}">

    <Grid Background ="#F3F3F3" Width="310" Height ="420">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding AnyDesk.AnyDeskId,StringFormat=AnyDeskId: {0}}" Margin="5 0 0 0" FontSize="12" FontWeight="Medium" VerticalAlignment="Center" FontFamily="{StaticResource BaseFont}"  Grid.Row="0"/>
        <ListView BorderThickness="0" Grid.Row="1" Background="White" ScrollViewer.HorizontalScrollBarVisibility="Disabled" >
            
        </ListView>

    </Grid>
</Page>
